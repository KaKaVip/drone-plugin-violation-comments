<?xml version="1.0" encoding="UTF-8"?>
<project name="module_java-violation-comments" default="compile.module.java-violation-comments">
  <dirname property="module.java-violation-comments.basedir" file="${ant.file.module_java-violation-comments}"/>
  
  <property name="module.jdk.home.java-violation-comments" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.java-violation-comments" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.java-violation-comments" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.java-violation-comments" value="-encoding UTF-8 -source 1.6 -target 1.6 ${compiler.args}"/>
  
  <property name="java-violation-comments.output.dir" value="${module.java-violation-comments.basedir}/out/production/java-violation-comments"/>
  <property name="java-violation-comments.testoutput.dir" value="${module.java-violation-comments.basedir}/out/test/java-violation-comments"/>
  
  <path id="java-violation-comments.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="java-violation-comments.module.production.classpath">
    <path refid="${module.jdk.classpath.java-violation-comments}"/>
    <path refid="library.com.google.code.gson:gson:2.7.classpath"/>
  </path>
  
  <path id="java-violation-comments.runtime.production.module.classpath">
    <pathelement location="${java-violation-comments.output.dir}"/>
    <path refid="library.com.google.code.gson:gson:2.7.classpath"/>
  </path>
  
  <path id="java-violation-comments.module.classpath">
    <path refid="${module.jdk.classpath.java-violation-comments}"/>
    <pathelement location="${java-violation-comments.output.dir}"/>
    <path refid="library.com.google.code.gson:gson:2.7.classpath"/>
  </path>
  
  <path id="java-violation-comments.runtime.module.classpath">
    <pathelement location="${java-violation-comments.testoutput.dir}"/>
    <pathelement location="${java-violation-comments.output.dir}"/>
    <path refid="library.com.google.code.gson:gson:2.7.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.java-violation-comments">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.java-violation-comments">
    <patternset refid="excluded.from.module.java-violation-comments"/>
  </patternset>
  
  <path id="java-violation-comments.module.sourcepath">
    <dirset dir="${module.java-violation-comments.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.java-violation-comments" depends="compile.module.java-violation-comments.production,compile.module.java-violation-comments.tests" description="Compile module java-violation-comments"/>
  
  <target name="compile.module.java-violation-comments.production" depends="register.custom.compilers" description="Compile module java-violation-comments; production classes">
    <mkdir dir="${java-violation-comments.output.dir}"/>
    <javac2 destdir="${java-violation-comments.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.java-violation-comments}/javac">
      <compilerarg line="${compiler.args.java-violation-comments}"/>
      <bootclasspath refid="java-violation-comments.module.bootclasspath"/>
      <classpath refid="java-violation-comments.module.production.classpath"/>
      <src refid="java-violation-comments.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.java-violation-comments"/>
    </javac2>
    
    <copy todir="${java-violation-comments.output.dir}">
      <fileset dir="${module.java-violation-comments.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.java-violation-comments.tests" depends="register.custom.compilers,compile.module.java-violation-comments.production" description="compile module java-violation-comments; test classes" unless="skip.tests"/>
  
  <target name="clean.module.java-violation-comments" description="cleanup module">
    <delete dir="${java-violation-comments.output.dir}"/>
    <delete dir="${java-violation-comments.testoutput.dir}"/>
  </target>
</project>